<% @comments.each do |c| %>
  <p class="border-top mt-2 py-2" style="font-size:1.5vw;">
    <%= link_to User.find(c.user_id).username, profile_path(User.find(c.user_id).username) %>:
    <%= c.comment %>
    <% if user_signed_in? && current_user.id == c.user_id %>
      <%= button_to 'Delete', post_comment_path(c.post_id, c.id), method: :delete, class: 'btn btn-danger' %>
    <% end %>
  </p>

<% end %>
