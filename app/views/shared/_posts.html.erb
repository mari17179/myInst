<link rel="stylesheet" href="https://colorlib.com/preview/theme/poportfolio/css/bootstrap.min.css">
<link rel="stylesheet" href="https://colorlib.com/preview/theme/poportfolio/css/font-awesome.min.css">
<link rel="stylesheet" href="https://colorlib.com/preview/theme/poportfolio/style.css">

<div style="font-size:2vw; margin-left:30px; margin-right:30px; margin-top:90px">
  <div class="outer-container home-page">
    <div class="container-fluid">
      <div class="row">

        <% posts.each do |post| %>
        <a href="<%= post_path(post.id) %>">
        <div class="col-12 col-md-6 col-lg-5 p-2 border" style="font-size:2vw; width:250px; margin-bottom:30px; margin-left:40px; margin-right:20px;">
          <div class="portfolio-content">
            <figure>
              <%= link_to (image_tag post.image, class: 'd-block w-70'), post_path(post.id) %>
            </figure>
              <h3><%= link_to post.description, post_path(post.id) %></h3>
          </div>
        </div>
        </a>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://colorlib.com/preview/theme/poportfolio/js/jquery.js"></script>
<script type="text/javascript" src="https://colorlib.com/preview/theme/poportfolio/js/custom.js"></script>
