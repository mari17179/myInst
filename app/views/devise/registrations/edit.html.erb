
<header class="masthead text-center text-white">
    <div class="masthead-content">
      <div class="container">

        <h1 style="font-size:3vw;"><%= t('.title', resource: resource_name.to_s.humanize) %></h1>

        <div style="font-size:2vw; margin-left:30px; margin-right:30px; margin-top:75px">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <div style="font-size:2vw; margin-left:30px; margin-right:30px">
            <%= bootstrap_devise_error_messages! %>
          </div>
            <div class="form-group">
                <%= image_tag(resource.user_photo_full_thumbnail) if resource.user_photo.attached? %>
            </div>

            <div class="form-group" style="margin-left:300px">
                <%= f.file_field (:user_photo) %>
            </div> <br/>


            <div class="form-group">
                <%= f.label :username %><br/>
                <%= f.text_field :username, {:style=>'size:25;', :class => "css_class"} %>
            </div>


            <div class="form-group">
              <%= f.label :email %> <br/>
              <%= f.email_field :email, {:style=>'size:25;', :class => "css_class"} %>
            </div>

            <div class="form-group">
              <%= f.label :password %> <br/>
              <%= f.password_field :password, {:style=>'size:25;', :class => "css_class"} %>
              <br/>

              <small style="font-size:1.5vw; color:white;">
                <%= t('.leave_blank_if_you_don_t_want_to_change_it') %></small>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation %> <br/>
              <%= f.password_field :password_confirmation, {:style=>'size:25;', :class => "css_class"}  %>
            </div>

            <div class="form-group">
              <%= f.label :current_password %> <br/>
              <%= f.password_field :current_password, {:style=>'size:25;', :class => "css_class"} %>
              <br/>

              <small style="font-size:1.5vw; color:white;">
                <%= t('.we_need_your_current_password_to_confirm_your_changes') %>
              </small>
            </div>

            <div class="form-group">
              <%= f.submit t('.update'),{:style=>'size:25; color:black;', :class => "css_class"} %>
            </div>
          <% end %>

          <p> <%= t('.unhappy') %>? <br/>
            <%= link_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete %>.</p>

          <%= link_to t('.back'), :back ,{:style=>'size:25; color:black;', :class => "css_class"}%>
          </div>
        </div>
      </div>
      <div class="bg-circle-1 bg-circle"></div>
      <div class="bg-circle-2 bg-circle"></div>
      <div class="bg-circle-3 bg-circle"></div>
      <div class="bg-circle-4 bg-circle"></div>
</header>
