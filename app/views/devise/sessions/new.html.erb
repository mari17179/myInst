
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div style="margin-top:75px; font-size:2vw; margin-left:30px; margin-right:30px">
  <%= bootstrap_devise_error_messages! %>
</div>
<div style="font-size:2vw; margin-left:30px; margin-right:30px; margin-top:90px">
  <div class="form-group">
    <%= f.label :login %><br/>
    <%= f.text_field :login,  {:style=>'size:25;', :class => "css_class"} %>
  </div>

  <div class="form-group">
    <%= f.label :password %> <br/>
    <%= f.password_field :password,  {:style=>'size:25;', :class => "css_class"} %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group form-check" style="font-size:1.5vw;"">
      <%= f.check_box :remember_me, class: 'form-check-input' %>
      <%= f.label :remember_me,  {:style=>'margin-left:20px;', :class => "css_class"} do %>
        <%= resource.class.human_attribute_name('remember_me') %>
      <% end %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.submit  t('.sign_in'), {:style=>'size:25;', :class => "css_class"} %>
  </div>
 </div>
<% end %>
</div>
